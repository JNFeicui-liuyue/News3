<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <contacts.feicui.edu.news3.view.HorizontalListView
            android:id="@+id/hi_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_moretype">
        </contacts.feicui.edu.news3.view.HorizontalListView>

        <ImageView
            android:src="@drawable/drawable_moretype_selector"
            android:id="@+id/iv_moretype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <contacts.feicui.edu.news3.view.xlistview.XListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></contacts.feicui.edu.news3.view.xlistview.XListView>

</LinearLayout>